  <script type="text/javascript">
      function show_ajax_loader(element) {
          $(element).innerHTML =<%= ("'" + image_tag("ajax-loader.gif") + "'").html_safe -%>;
      }
      function show_large_ajax_loader(element) {
          $(element).innerHTML =<%= ("'" + image_tag("ajax-loader-large.gif") + "'").html_safe -%>
      }
  </script>

  <style media="screen" type="text/css">

      #topbar {
          text-align: center;
          height: 40px;
          background-image: url("<%= asset_path(Planout.instance.get[:template][:searchfade_repeat]) %>");
          background-repeat: repeat-x;
          background-position: top center;
          padding: 10px 0;
          border-top: 0px;
      }

      body{
          padding-top: 135px;
      }

      #myexp_sidebar {
          /*padding: 10px 0 0 0;*/
          padding: 10px 0.5em 1px 0.5em;
          background-color: #<%= Planout.instance.get[:template][:color] %>;
          border-right: 1px solid #DEDEDE;
          border-width: 0 0 1px 1px;
          width: 100%;
      }

      div.home_panel .heading {
          background-color: #<%= Planout.instance.get[:template][:color] %>;
      }

      .menutabs li a:link {
          background: none repeat scroll 0 0 #<%= Planout.instance.get[:template][:color] %>;
          border: 0 none;
          color: #ffffff;
      }

      #curved_top {
          background-color: #<%= Planout.instance.get[:template][:color] %>;
      }

      .menutabs li a:visited {
          background: none repeat scroll 0 0 #<%= Planout.instance.get[:template][:color] %>;
          color: #ffffff;
      }

      ul#header > li#seek_logo img {
          max-height: 80px;
          max-width: 100px;
      }

  </style>


  <link href="#data" type="application/json" rel="exhibit-data" />
