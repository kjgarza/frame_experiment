<% if Seek::Config.header_tagline_text_enabled %>
    <p id='header_text_main'  class="box_standout">

      <style media="screen" type="text/css">

          #topbar {
              text-align: center;
              height: 40px;
              background-image: url("<%= asset_path(Planout.instance.get[:template][:searchfade_repeat]) %>");
              background-repeat: repeat-x;
              background-position: top center;
              padding: 10px 0;
              border-top: 0px;
          }

          /*body{*/
              /*padding-top: 140px;*/
          /*}*/

          #myexp_sidebar {
              padding: 10px 0.5em 1px 0.5em;
              background-color: #<%= Planout.instance.get[:template][:color] %>;
              border-right: 1px solid #DEDEDE;
              border-width: 0 0 1px 1px;
          }

          div.home_panel .heading {
              background-color: #<%= Planout.instance.get[:template][:color] %>;
          }

          .menutabs li a:link {
              background: none repeat scroll 0 0 #<%= Planout.instance.get[:template][:color] %>;
              border: 0 none;
              color: #ffffff;
          }

          #curved_top {
              background-color: #<%= Planout.instance.get[:template][:color] %>;
          }

          .menutabs li a:visited {
              background: none repeat scroll 0 0 #<%= Planout.instance.get[:template][:color] %>;
              color: #ffffff;
          }

          ul#header > li#seek_logo img {
              max-height: 80px;
              max-width: 200px;
          }

      </style>

    <%= Planout.instance.get[:template][:header_frames] %>

    </p>


<% else %>
    <p id='header_text_main'>&nbsp;</p>
<% end %>
